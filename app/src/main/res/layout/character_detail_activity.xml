<!-- res/layout/character_detail_activity.xml -->

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CharacterDetailActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/characterImager"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/rick"
         />

    <TextView
        android:id="@+id/characterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Character Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Status" />

    <TextView
        android:id="@+id/characterSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Status" />

    <TextView
        android:id="@+id/characterLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Status" />

    <LinearLayout
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addToFavoritesButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/search_board"
            android:text="Add to Favorites"
            app:backgroundTint="@color/backgrount_button" />
        <Button
            android:id="@+id/backBT"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/search_board"
            app:backgroundTint="@color/background_search"
            android:fontFamily="@font/rubik_medium"
            android:text="Go Home"
            android:textSize="15dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>



</LinearLayout>
