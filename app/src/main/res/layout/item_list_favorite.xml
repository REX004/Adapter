<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14FF0000"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/im_person"
                android:layout_width="92dp"
                android:layout_height="117dp"
                tools:srcCompat="@drawable/rick" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textAlignment="center"
                    android:text="Error"
                    android:id="@+id/name_person"
                    android:layout_width="290dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/status_person"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Error"
                    android:textSize="12sp"
                    android:fontFamily="@font/rubik_medium"
                    app:layout_constraintEnd_toEndOf="@+id/name_person"
                    app:layout_constraintStart_toStartOf="@+id/name_person"
                    app:layout_constraintTop_toBottomOf="@+id/name_person" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_marginLeft="8dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Error"
                    android:textSize="12sp"
                    android:fontFamily="@font/rubik_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/status_person"
                    app:layout_constraintTop_toBottomOf="@+id/status_person" />

                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="280dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:text="Error"
                    android:textSize="12sp"
                    android:fontFamily="@font/rubik_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/status_person"
                    app:layout_constraintTop_toBottomOf="@+id/gender" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp">
    </TextView>
</LinearLayout>
